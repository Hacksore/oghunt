{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "PH_API_KEY",
    "LOOPS_FORM_ENDPOINT",
    "DATABASE_URL",
    "CRON_SECRET",
    "GEMINI_API_KEY",
    "POSTHOG_API_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "db:push": {},
    "db:generate": {},
    "check": {
      "dependsOn": [
        "^check"
      ]
    },
    "format": {
      "dependsOn": [
        "^fix"
      ]
    },
    "fix": {
      "dependsOn": [
        "^fix"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
