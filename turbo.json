{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "PH_API_KEY",
    "CRON_SECRET",
    "GEMINI_API_KEY",
    "POSTHOG_API_KEY",
    "DATABASE_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "db:generate": {},
    "check": {
      "dependsOn": [
        "^check-types",
        "^lint"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "format": {
      "dependsOn": [
        "^format"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
